<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iconLogo"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/log" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="OTP Verification"
        android:textAlignment="center"
        android:textColor="#036007"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!--1) Phone number input -->
    <LinearLayout
        android:layout_width="428dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"

        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:text="We will send your an"
            android:textColor="#535252"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="One Time Password"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="On this mobile number"
        android:textAlignment="center"
        android:textColor="#535252"
        android:textSize="18sp"
        android:textStyle="normal" />

        <!--pour le numero de telephone -->

        <LinearLayout
            android:id="@+id/phoneLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shape"
                android:ems="1"
                android:hint="Type your Phone number"
                android:inputType="phone"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#121111"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnPhoneContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#6284DA"
                android:text="Continue"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

        </LinearLayout>

    <!-- for OTP/verification code input -->


    <LinearLayout
        android:id="@+id/codeLl"
        android:layout_width="431dp"
        android:layout_height="235dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/phoneLbe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify +237 code"
            android:textAlignment="center"
            android:textColor="#1532A1"
            android:textSize="25sp"
            android:textStyle="bold|normal" />


        <TextView
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the OTP code to verify phone number"
            android:textAlignment="center"
            android:textColor="#5C3C2F"
            android:textSize="13sp"
            android:textStyle="bold|normal" />


        <EditText
            android:id="@+id/edtCode"
            android:layout_width="355dp"
            android:layout_height="45dp"
            android:background="@drawable/background_shape"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/resendCode"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scrollbarSize="13sp"
            android:text="@string/didn_t_get_otp_resend_code"
            android:textAlignment="center"
            android:textColor="#5C3C2F"
            android:textStyle="bold|normal" />

        <Button
            android:id="@+id/btnSubmitCode"
            android:layout_width="351dp"
            android:layout_height="61dp"
            android:backgroundTint="#6284DA"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold|normal" />

    </LinearLayout>


</LinearLayout>